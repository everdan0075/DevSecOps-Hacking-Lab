{
  "id": null,
  "uid": "attack-visibility",
  "title": "DevSecOps Attack Visibility",
  "tags": ["devsecops", "security", "attacks"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "Login Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Login Attempts (Success vs Failure)",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum by (outcome) (rate(login_attempts_total[5m]))",
          "legendFormat": "{{outcome}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Rate Limiter Blocks",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(rate_limit_blocks_total[5m]))",
          "legendFormat": "Rate limit blocks",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Threat Indicators",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 10 }
    },
    {
      "type": "stat",
      "title": "Current IP Bans",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 11 },
      "targets": [
        {
          "expr": "sum(ip_bans_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Failed Attempts (5m)",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 11 },
      "targets": [
        {
          "expr": "sum(rate(login_failed_total[5m]))",
          "format": "time_series",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "type": "table",
      "title": "Failed Attempts by Reason",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 11 },
      "targets": [
        {
          "expr": "sum(login_failed_total) by (reason)",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "auto" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 25 }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "System Health",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 17 }
    },
    {
      "type": "gauge",
      "title": "Prometheus Scrape Success",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 18 },
      "targets": [
        {
          "expr": "avg_over_time(up{job=\"login-api\"}[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.9 },
              { "color": "green", "value": 0.99 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "API Latency (p90)",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 18 },
      "targets": [
        {
          "expr": "histogram_quantile(0.90, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}

