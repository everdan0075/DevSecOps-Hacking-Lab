{
  "id": null,
  "uid": "auth-security",
  "title": "Auth Security (Phase 2.1)",
  "tags": ["devsecops", "security", "auth", "mfa", "jwt"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "Authentication Flow",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Login Stages",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum by (stage) (rate(login_stage_total[5m]))",
          "legendFormat": "{{stage}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "stat",
      "title": "Authentication Success Rate",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(login_attempts_total{outcome=\"success\"}[5m])) / sum(rate(login_attempts_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Active Sessions",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
      "targets": [
        {
          "expr": "sum(increase(login_attempts_total{outcome=\"success\"}[5m])) - sum(increase(jwt_refresh_total{status=~\"revoked_.*\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "MFA Security",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }
    },
    {
      "type": "timeseries",
      "title": "MFA Verification Attempts",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "sum by (result) (rate(mfa_attempts_total[5m]))",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "stat",
      "title": "MFA Success Rate",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 10 },
      "targets": [
        {
          "expr": "sum(rate(mfa_attempts_total{result=\"success\"}[5m])) / sum(rate(mfa_attempts_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "green", "value": 85 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Failed MFA Attempts (5m)",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 10 },
      "targets": [
        {
          "expr": "sum(increase(mfa_attempts_total{result=\"failure\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 25 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "MFA Challenge Lifecycle",
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "expr": "sum by (reason) (rate(login_failed_total{reason=~\"mfa_.*\"}[5m]))",
          "legendFormat": "{{reason}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "row",
      "title": "JWT Token Management",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 }
    },
    {
      "type": "timeseries",
      "title": "Token Refresh Operations",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
      "targets": [
        {
          "expr": "sum by (status) (rate(jwt_refresh_total[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "stat",
      "title": "Token Refresh Success Rate",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 19 },
      "targets": [
        {
          "expr": "sum(rate(jwt_refresh_total{status=\"success\"}[5m])) / sum(rate(jwt_refresh_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "green", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Denied Refresh Attempts (5m)",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 19 },
      "targets": [
        {
          "expr": "sum(increase(jwt_refresh_total{status=\"denied\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Token Revocations",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 23 },
      "targets": [
        {
          "expr": "sum by (status) (rate(jwt_refresh_total{status=~\"revoked_.*\"}[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Revocations (10m)",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 23 },
      "targets": [
        {
          "expr": "sum(increase(jwt_refresh_total{status=~\"revoked_.*\"}[10m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Defense Mechanisms",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 }
    },
    {
      "type": "timeseries",
      "title": "Rate Limiting & IP Bans",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "sum(rate(rate_limit_blocks_total[5m]))",
          "legendFormat": "Rate limit blocks",
          "refId": "A"
        },
        {
          "expr": "sum(rate(ip_bans_total[5m]))",
          "legendFormat": "IP bans",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Failed Login Reasons",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "expr": "sum by (reason) (rate(login_failed_total[5m]))",
          "legendFormat": "{{reason}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "row",
      "title": "Attack Detection",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 }
    },
    {
      "type": "table",
      "title": "Active Alerts",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 },
      "targets": [
        {
          "expr": "ALERTS{service=\"login-api\", alertstate=\"firing\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "severity", "desc": true }]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "Value": true },
            "indexByName": {
              "alertname": 0,
              "severity": 1,
              "category": 2,
              "alertstate": 3
            }
          }
        }
      ]
    }
  ],
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  }
}

