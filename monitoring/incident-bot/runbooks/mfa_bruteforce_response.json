{
  "name": "MFA Brute Force Response",
  "description": "Automated response to MFA code brute force attempts",
  "version": "1.0",
  "enabled": true,
  "trigger": {
    "alertname": "MFABypassAttempts",
    "severity": "warning",
    "category": "mfa-attack"
  },
  "priority": 20,
  "actions": [
    {
      "type": "notify",
      "description": "Alert security team about MFA brute force",
      "params": {
        "channel": "console",
        "message": "⚠️ MFA brute force detected! Multiple failed MFA verification attempts."
      },
      "continue_on_error": true
    },
    {
      "type": "ip_ban",
      "description": "Ban attacking IP for 2 hours (longer for MFA attacks)",
      "params": {
        "duration": 7200,
        "reason": "MFA brute force attack"
      },
      "continue_on_error": true,
      "retry_count": 2
    },
    {
      "type": "report",
      "description": "Document MFA attack patterns",
      "params": {
        "format": "json",
        "include_context": true
      },
      "continue_on_error": true
    }
  ],
  "author": "DevSecOps Team",
  "tags": ["mfa", "brute-force", "authentication"],
  "created_at": "2025-11-10T00:00:00Z"
}

