{
  "name": "Token Abuse Response",
  "description": "Response to refresh token abuse and replay attacks",
  "version": "1.0",
  "enabled": true,
  "trigger": {
    "alertname": "RefreshTokenAbuse",
    "severity": "warning",
    "category": "token-abuse"
  },
  "priority": 20,
  "actions": [
    {
      "type": "notify",
      "description": "Alert about token replay attack",
      "params": {
        "channel": "console",
        "message": "⚠️ Token abuse detected! High rate of invalid refresh token attempts - possible replay attack."
      },
      "continue_on_error": true
    },
    {
      "type": "report",
      "description": "Generate token abuse analysis",
      "params": {
        "format": "json",
        "include_context": true
      },
      "continue_on_error": true
    },
    {
      "type": "ip_ban",
      "description": "Ban source of replay attacks",
      "params": {
        "duration": 3600,
        "reason": "Token replay attack detected"
      },
      "continue_on_error": true
    }
  ],
  "author": "DevSecOps Team",
  "tags": ["token", "replay-attack", "session"],
  "created_at": "2025-11-10T00:00:00Z"
}

